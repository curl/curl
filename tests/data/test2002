<testcase>
<info>
<keywords>
HTTP
HTTP GET
AWS
SigV4
HMAC-SHA256
header
explicit-date
</keywords>
</info>

#
# Server-side
<reply>
<data>
HTTP/1.1 200 OK
Date: Thu, 22 Oct 2025 20:04:16 GMT
Server: test-server/fake
Content-Type: text/plain
Content-Length: 3

OK
</data>
</reply>

#
# Client-side
<client>
<server>
http
</server>
<name>
AWS SigV4 header with explicit X-Amz-Date
</name>
<command>
http://%HOSTIP:%HTTPPORT/%TESTNUMBER --aws-sigv4 "aws:amz:us-east-1:s3" -H "X-Amz-Date: 19800101T000000Z" -u "AKIATEST:secretkey"
</command>
</client>

#
# Verify SigV4 header signing uses explicit date
<verify>
<strippart>
s/Signature=[0-9a-f]*/Signature=SIGNATURE64/g
</strippart>
<protocol crlf="yes">
GET /%TESTNUMBER HTTP/1.1
Host: %HOSTIP:%HTTPPORT
Authorization: AWS4-HMAC-SHA256 Credential=AKIATEST/19800101/us-east-1/s3/aws4_request, SignedHeaders=host;x-amz-content-sha256;x-amz-date, Signature=SIGNATURE64
x-amz-content-sha256: e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855
User-Agent: curl/%VERSION
Accept: */*
X-Amz-Date: 19800101T000000Z

</protocol>
<postcheck>
perl -e '
  my $headers = "GET /%TESTNUMBER HTTP/1.1\nHost: %HOSTIP:%HTTPPORT\nAuthorization: AWS4-HMAC-SHA256 Credential=AKIATEST/19800101/us-east-1/s3/aws4_request, SignedHeaders=host;x-amz-content-sha256;x-amz-date, Signature=SIGNATURE64\nx-amz-content-sha256: e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855\nUser-Agent: curl/%VERSION\nAccept: */*\nX-Amz-Date: 19800101T000000Z";
  my @dates = ($headers =~ /^X-Amz-Date:/gmi);
  if (@dates != 1) {
    print "ERROR: Found " . scalar(@dates) . " X-Amz-Date headers, expected exactly 1\n";
    exit 1;
  }
  print "OK: Found exactly 1 X-Amz-Date header\n";
'
</postcheck>
</verify>
</testcase>
