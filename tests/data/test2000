# Verify SigV4 header signing
<verify>
<protocol crlf="yes">
GET /%TESTNUMBER HTTP/1.1
Host: %HOSTIP:%HTTPPORT
Authorization: AWS4-HMAC-SHA256 Credential=AKIATEST/YYYYMMDD/us-east-1/s3/aws4_request, SignedHeaders=host;x-amz-content-sha256;x-amz-date, Signature=SIGNATURE64
x-amz-content-sha256: e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855
User-Agent: curl/%VERSION
Accept: */*
X-Amz-Date: YYYYMMDDTHHMMSSZ

</protocol>
<strippart>
s/Credential=AKIATEST\/[0-9]{8}\/us-east-1\/s3\/aws4_request/Credential=AKIATEST\/YYYYMMDD\/us-east-1\/s3\/aws4_request/
s/X-Amz-Date: [0-9]{8}T[0-9]{6}Z/X-Amz-Date: YYYYMMDDTHHMMSSZ/
s/Signature=[a-f0-9]{64}/Signature=SIGNATURE64/
</strippart>
