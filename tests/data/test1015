http://%HOSTIP:%HTTPPORT/%TESTNUMBER
--data-urlencode "my name is moo[]"
--data-urlencode "y e s=s_i_r"
--data-urlencode "v_alue@%LOGDIR/%TESTNUMBER.txt"
--data-urlencode @%LOGDIR/%TESTNUMBER.txt
</command>
<file name="%LOGDIR/%TESTNUMBER.txt">
content to _?!#$'|%LT%GT
</file>
</client>

