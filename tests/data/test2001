<testcase>
<info>
<keywords>
HTTP
HTTP GET
AWS
SigV4
HMAC-SHA256
querystring
explicit-date
</keywords>
</info>

#
# Server-side
<reply>
<data>
HTTP/1.1 200 OK
Date: Thu, 22 Oct 2025 20:04:16 GMT
Server: test-server/fake
Content-Type: text/plain
Content-Length: 3

OK
</data>
</reply>

#
# Client-side
<client>
<server>
http
</server>
<name>
AWS SigV4 querystring with explicit X-Amz-Date
</name>
<command>
http://%HOSTIP:%HTTPPORT/%TESTNUMBER?X-Amz-Date=19800101T000000Z --aws-sigv4 "aws:amz:us-east-1:s3" --aws-sigv4-mode "querystring" -u "AKIATEST:secretkey"
</command>
</client>

#
# Verify SigV4 querystring signing uses explicit date
<verify>
<strippart>
s/X-Amz-Signature=[0-9a-f]*/X-Amz-Signature=SIGNATURE64/g
</strippart>
<protocol crlf="yes">
GET /%TESTNUMBER?X-Amz-Date=19800101T000000Z&X-Amz-Algorithm=AWS4-HMAC-SHA256&X-Amz-Credential=AKIATEST%2F19800101%2Fus-east-1%2Fs3%2Faws4_request&X-Amz-SignedHeaders=host%3Bx-amz-content-sha256&X-Amz-Signature=SIGNATURE64 HTTP/1.1
Host: %HOSTIP:%HTTPPORT
User-Agent: curl/%VERSION
Accept: */*

</protocol>
<postcheck>
perl -e '
  my $query = "%TESTNUMBER?X-Amz-Date=19800101T000000Z&X-Amz-Algorithm=AWS4-HMAC-SHA256&X-Amz-Credential=AKIATEST%2F19800101%2Fus-east-1%2Fs3%2Faws4_request&X-Amz-SignedHeaders=host%3Bx-amz-content-sha256&X-Amz-Signature=SIGNATURE64";
  my @dates = ($query =~ /X-Amz-Date=/g);
  if (@dates != 1) {
    print "ERROR: Found " . scalar(@dates) . " X-Amz-Date parameters, expected exactly 1\n";
    exit 1;
  }
  print "OK: Found exactly 1 X-Amz-Date parameter\n";
'
</postcheck>
</verify>
</testcase>
