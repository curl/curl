<?xml version="1.0" encoding="US-ASCII"?>
<testcase>
<info>
<keywords>
SMTP
SASL
SASL AUTH CRAM-MD5
RFC2195
RFC4954
</keywords>
</info>

# Server-side
<reply>
<servercmd>
AUTH CRAM-MD5
REPLY AUTH 334 %b64[%3c1972.987654321@curl%3e]b64%
REPLY %b64[user 7031725599fdbb5d412689aa323e3e0b]b64% 235 Authenticated
</servercmd>
</reply>

# Client-side
<client>
<server>
smtp
</server>
<features>
crypto
digest
</features>
<name>
SMTP CRAM-MD5 authentication
</name>
<stdin crlf="yes">
mail body
</stdin>
<command>
smtp://%HOSTIP:%SMTPPORT/%TESTNUMBER --mail-rcpt recipient@example.com --mail-from sender@example.com -u user:secret -T -
</command>
</client>

# Verify data after the test has been "shot"
<verify>
<protocol crlf="yes">
EHLO %TESTNUMBER
