%b64[user 7031725599fdbb5d412689aa323e3e0b]b64%
MAIL FROM:%LTsender@example.com%GT
RCPT TO:%LTrecipient@example.com%GT
DATA
QUIT
</protocol>
<upload crlf="yes">
mail body
.
</upload>
</verify>
</testcase>
