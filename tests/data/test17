</name>
 <stdin>
#
# Use a silly request without '--':
request MOOO
#
# Set the user-agent using a short-option:
-A "agent007 license to drill\t"
#
# long option *with* '--':
--max-time 180
 </stdin>
<command>
-K - %HOSTIP:%HTTPPORT/that.site.com/%TESTNUMBER
</command>
</client>

